env16dos = Environment(tools = ['default', 'watcom'], toolpath = ['../../'], LINKFLAGS='system dos')
env32win = Environment(tools = ['default', 'watcom'], USE386=True, toolpath = ['../../'], LINKFLAGS='system nt')
env32linux = Environment(tools = ['default', 'watcom'], USE386=True, toolpath = ['../../'], LINKFLAGS='system linux')
#env32['USE386']=True
hello16dos_obj = env16dos.Object('hello16dos', 'hello.c')
hello32win_obj = env32win.Object('hello32win', 'hello.c')
hello32linux_obj = env32win.Object('hello32linux', 'hello.c')
hello16dos_exe = env16dos.Program(hello16dos_obj)
hello32win_exe = env32win.Program(hello32win_obj)
hello32linux_exe = env32linux.Program(hello32linux_obj)
